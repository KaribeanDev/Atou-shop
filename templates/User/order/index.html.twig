{% extends 'base.html.twig' %}

{% block title %}
  Mes Commandes - Feuilles médicinales | Atoumo
{% endblock %}

{% block body %}
  <h1>Mon historique de Commandes</h1>

  <section class="shoping-cart spad">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="shoping__cart__table">
            <table>
              <thead>
                <tr>
                  <th class="shoping__product">Commandes</th>
                  <th>Commandé le :</th>
                  <th>Articles</th>
                  <th>Montant</th>
                  <th>Détails</th>
                </tr>
              </thead>
              <tbody>
                {% for order in orders %}
                  <tr>
                    <td class="shoping__cart__item">
                      <h5>N°{{ order.id }}</h5>
                    </td>
                    <td>{{ order.createdAt|date('d-m-Y') }}</td>
                    <td class="shoping__cart__price">
                      {% for item in order.orderDetails %}
                        {{ item.product }}
                      {% endfor %}
                    </td>
                    <td>{{ order.fullPrice }}€</td>
                    <td>
                      <a class="fa-sharp fa-solid fa-eye" href="{{ path('app_order_show', { id: order.id }) }}"></a>
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </section>

{% endblock %}
