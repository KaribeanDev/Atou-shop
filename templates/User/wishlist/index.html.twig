{% extends 'base.html.twig' %}

{% block title %}WishList index{% endblock %}

{% block body %}
    <h1>WishList index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>WishlistDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for wish_list in wish_lists %}
            <tr>
                <td>{{ wish_list.id }}</td>
                <td>{{ wish_list.wishlistDate ? wish_list.wishlistDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_wish_list_show', {'id': wish_list.id}) }}">show</a>
                    <a href="{{ path('app_wish_list_edit', {'id': wish_list.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_wish_list_new') }}">Create new</a>
{% endblock %}
