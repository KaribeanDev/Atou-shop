<section class="hero">
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <div class="hero__categories">
          <div class="hero__categories__all">
            <i class="fa fa-bars"></i>
            <span>Catégories</span>
          </div>
          <ul>
            {% for category in categories %}
              <li>
                <a href="{{ path('app_category_show', { id: category.id }) }}">{{ category.catName }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>

      <div class="col-lg-9">
        <div class="hero__search">
          <div class="hero__search__form">
            <form action="#" >
              <div class="hero__search__categories">
                Toutes Categories
                <span class="arrow_carrot-down"></span>
              </div>
              <input type="text" placeholder="" />
              <button type="" class="site-btn">BIENTÔT DISPONIBLE</button>
            </form>
          </div>
          <div class="hero__search__phone">
            <div class="hero__search__phone__icon">
              <i class="fa fa-phone"></i>
            </div>
            <div class="hero__search__phone__text">
              <h5>01.41.41.41.41</h5>
              <span>support 24/7</span>
            </div>
          </div>
        </div>
        <div class="hero__item set-bg" style="background-image: url(/assets/images/fixe/banner/Home_Atoumo.jpeg">
          <div class="hero__text">
            <span>Feuilles séchées</span>
            <h2>
              ATOUMO
              <br />100% Organic
            </h2>
            <p>Livraison dans toute la France</p>
            <a href="{{ path('app_product_index') }}?sort=id" class="primary-btn">SHOP NOW</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
