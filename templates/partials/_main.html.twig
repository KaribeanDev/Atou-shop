<section class="featured spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title">

          {% for message in app.session.flashbag.get('addWishlist') %}
            <div class="alert alert-success">{{ message }}</div>
          {% endfor %}

          <h2>Produits en vedette</h2>
        </div>
        <div class="featured__controls">
          <ul>
            {% for cat in categories %}
              <li onclick="changeCat('{{ cat.catName }}')">{{ cat.catName }}</li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
    <div class="row featured__filter">
      {% for product in products %}
        <div class="col-lg-3 col-md-4 col-sm-6 mix {{ product.category.catName }}" id="{{ product.category.catName }}">
          <div class="featured__item">
            <div class="featured__item__pic set-bg" style="background-image: url(/assets/images/upload/products/{{ product.image }})">
              <ul class="featured__item__pic__hover">
                <li>
                  <a href="{{ path('wishlist_add', { productId: product.id }) }}"><i class="fa fa-heart"></i></a>
                </li>
                <li>
                  <a href="{{ path('app_product_show', { id: product.id, product: product.slug }) }}"><i class="fa fa-eye"></i></a>
                </li>
                <li>
                  <a href="{{ path('app_cart_add', { id: product.id }) }}"><i class="fa fa-shopping-cart"></i></a>
                </li>
              </ul>
            </div>
            <div class="featured__item__text">
              <h6><a href="{{ path('app_product_show', { id: product.id, product: product.slug }) }}">{{ product.productName }}</a></h6>
              <h5>{{ product.productPrice / 100 }} â‚¬</h5>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
