{{ form_start(form) }}

<!-- Contact Form Begin -->
<div class="contact-form spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="contact__form__title">
          <h2>Laissez votre Message</h2>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6 col-md-6 ">
      {{ form_widget(form.userName) }}
      {# <input type="text" placeholder="Votre nom et prÃ©nom" id="userName"> #}
      </div>
      <div class="col-lg-6 col-md-6">
      {{ form_widget(form.contactEmail) }}

      {# <input type="email" placeholder="Votre Email" id="contactEmail"> #}
      </div>
      <div class="col-lg-12 text-center">
      {{ form_widget(form.message) }}
    </div>
    <div class="col-lg-12 text-center">
      <button class="site-btn">{{ button_label|default('ENVOYER MESSAGE') }}</button>
    </div>
  </div>
</div>
<!-- Contact Form End -->
{{ form_end(form) }}
